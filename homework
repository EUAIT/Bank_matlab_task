
x = linspace(0, 10, 100);


y1 = sin(x);        
y2 = exp(0.1 * x);  

figure;
yyaxis left
plot(x, y1, '-b', 'LineWidth', 2);
ylabel('sin(x)');
xlabel('X-axis');
grid on;

yyaxis right
plot(x, y2, '--r', 'LineWidth', 2);
ylabel('exp(0.1x)');

title('Plot with Two y-Axes');
legend({'sin(x)', 'exp(0.1x)'}, 'Location', 'northwest');
